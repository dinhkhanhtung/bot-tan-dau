{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/app/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/app/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "functions": {
        "src/app/api/**/*.ts": {
            "runtime": "@vercel/node"
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
}
